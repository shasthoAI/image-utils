{
  "name": "image-utils",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "bin": {
    "image-compress": "./bin/compress.js",
    "image-split": "./bin/split.js",
    "pdf-split": "./bin/pdf-split.js",
    "image-utils-mcp": "./src/mcp-server.js"
  },
  "scripts": {
    "compress": "node src/compressor.js",
    "compress:medium": "node src/compressor.js --medium",
    "compress:high": "node src/compressor.js --high",
    "compress:extreme": "node src/compressor.js --extreme",
    "compress:png": "node src/compressor.js --png-optimized",
    "compress:webp": "node src/compressor.js --webp",
    "compress:png-extreme": "node src/compressor.js --png-optimized --extreme",
    "split": "node src/splitter.js",
    "split:pdf": "node src/pdf_splitter.js",
    "mcp:server": "node src/mcp-server.js",
    "mcp:test": "node test-mcp-full.js",
    "prebuild": "npm run app:build",
    "build": "npm run app:build",
    "prestart": "npm run build",
    "start": "node src/web-server.js",
    "web": "npm run build && node src/web-server.js",
    "dev": "concurrently -k -n API,UI \"npm run web:dev\" \"npm run app:dev\"",
    "web:dev": "nodemon --watch src --ext js,mjs,json --exec \"node src/web-server.js\"",
    "app:dev": "npm --prefix app run dev",
    "app:build": "npm --prefix app run build",
    "app:preview": "npm --prefix app run preview",
    "desktop:dev": "cross-env UI_DEV_URL=http://localhost:5173 concurrently -k -n API,UI,APP \"npm run web:dev\" \"npm run app:dev\" \"electron .\"",
    "desktop:build": "npm run build && electron-builder --dir",
    "desktop:dist": "npm run build && electron-builder",
    "native:deps": "electron-builder install-app-deps",
    "native:rebuild": "npx electron-rebuild -f -w better-sqlite3 -w sharp",
    "global:install": "npm install -g .",
    "global:uninstall": "npm uninstall -g image-utils",
    "global:update": "npm uninstall -g image-utils && npm install -g .",
    "postinstall": "electron-builder install-app-deps || true"
  },
  "keywords": [],
  "author": "Shastho Limited <https://github.com/shasthoAI>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shasthoAI/image-utils.git"
  },
  "license": "MIT",
  "description": "A collection of lightweight Node.js utilities for common image processing tasks, including compression and splitting.",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "node-poppler": "^8.0.1",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "30.5.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1",
    "shadcn": "^3.0.0"
  },
  "build": {
    "npmRebuild": true,
    "appId": "com.shastho.imageutils",
    "productName": "Image Utils",
    "directories": {
      "output": "dist",
      "app": "."
    },
    "files": [
      "**/*",
      "!dist",
      "!uploads",
      "!outputs",
      "!input",
      "!output",
      "!data",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map",
      "!**/test/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**",
      "node_modules/@img/**",
      "node_modules/better-sqlite3/**",
      "node_modules/node-poppler/**"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "app/dist",
        "to": "app/dist"
      },
      {
        "from": "data",
        "to": "data"
      },
      {
        "from": "uploads",
        "to": "uploads"
      },
      {
        "from": "outputs",
        "to": "outputs"
      }
    ],
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Graphics"
    }
  }
}
